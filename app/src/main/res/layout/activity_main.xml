<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.androidbolivia.studyjam_tarea_1.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/colorCabecera"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WhatsApp"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/colorCabecera"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="3">

        <TextView
            android:id="@+id/tvSubIzq"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="LLAMADAS "
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:gravity="center"
            />



        <TextView
            android:id="@+id/tvSubcenter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="CHATS "
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:gravity="center"/>


        <TextView
            android:id="@+id/tvSubder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="CONTACTOS "
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- CONTACTO 01-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    >
                    <!-- lOGO -->
                    <ImageView
                        android:id="@+id/ivLogo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="7dp"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/ic_launcher"
                        />

                    <!-- NOMBRE ULTIMO_MSJ-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"

                        android:weightSum="2">
                        <TextView
                            android:id="@+id/tvNomUsr"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="juan Perez "
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/tvUltMsj"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Hola, que tal que cuentas..."
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"/>

                    </LinearLayout>

                    <!-- FECHA PUENTAJE-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/tvfecha"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="14/12/2016 "
                            android:layout_weight="1"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/tvCantMsj"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="100"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:gravity="center"/>

                    </LinearLayout>



                </LinearLayout>

                <!-- CONTACTO 02-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    >
                    <!-- lOGO -->
                    <ImageView
                        android:id="@+id/ivLogo1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="7dp"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/ic_launcher"
                        />

                    <!-- NOMBRE ULTIMO_MSJ-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"

                        android:weightSum="2">
                        <TextView
                            android:id="@+id/tvNomUsr1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Carlos Beltran "
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/tvUltMsj1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="u ciamdp regresas mi amigo..."
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"/>

                    </LinearLayout>

                    <!-- FECHA PUENTAJE-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/tvfecha1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="14/12/2016 "
                            android:layout_weight="1"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/tvCantMsj1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="100"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:gravity="center"/>

                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>


        </ScrollView>

    </LinearLayout>




</LinearLayout>